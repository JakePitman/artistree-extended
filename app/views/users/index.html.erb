<h1 class="color-stroke color-stroke-red">Artists</h1>
<div class="divider"></div>

<h1>Search Bar Goes Here</h1>

<div class="search-box">
    <%= form_tag users_index_path, method: 'get' do %>
       <%= text_field_tag :search, params[:search] %>
       <%= submit_tag "Search Artists", name: nil %>
    <% end %>


    <ul>
        <% @search_results.each do |profile| %>
            <li class="search-result"><%= link_to profile.username, profile %></li>
        <% end %>
    </ul>
</div>

<div class="divider"></div>

<div class="color-splash color-splash-red">
    <h1 class="page-subheading">Suggested Artists</h1>
</div>
<div class="divider"></div>


<% @suggested_artists.each do |artist| %>
    <div class="artist-card">
        <p class="card-title"><%= link_to artist.profile.username, artist %></p>
        <div class="artist-card-image-reel">
            <% get_three_samples(artist).each do |sample_image| %>
                <%= image_tag sample_image.image_url(:medium) %>
            <% end %>
        </div>
    </div>
<% end %>


<div class="divider"></div>
<div class="divider"></div>
